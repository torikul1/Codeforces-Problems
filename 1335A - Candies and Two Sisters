#include <iostream>
using namespace std;
int main()
{
    int t;
    cin >> t;
    int a[t];
    for (int i = 0; i < t; i++)
    {
        cin >> a[i];
    }
    for (int i = 0; i < t; i++)
    {
        if (a[i] < 3)
        {
            cout << "0" << endl;
        }
        else if (a[i] == 3)
        {
            cout << "1" << endl;
        }
        else
        {
            if (a[i] % 2 == 0)
            {
                cout << (a[i] / 2) - 1 << endl;
            }
            else
            {
                cout << a[i] / 2 << endl;
            }
        }
    }

    return 0;
}
